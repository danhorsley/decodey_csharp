<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Decodey.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Decodey"
    Shell.FlyoutBehavior="Disabled">

	<!-- Define the routes for navigation -->
	<TabBar>
		<!-- Game route -->
		<ShellContent
            Title="Game"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="game" />

		<!-- Home route -->
		<ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:HomePage}"
            Route="home" />

		<!-- Leaderboard route -->
		<ShellContent
            Title="Leaderboard"
            ContentTemplate="{DataTemplate local:LeaderboardPage}"
            Route="leaderboard" />

		<!-- Only add the frequently used pages to the shell -->
	</TabBar>

	<!-- Register routes for other pages that are not in the tab bar -->
	<ShellContent Route="privacy" ContentTemplate="{DataTemplate local:PrivacyPage}" />
	<ShellContent Route="scoring" ContentTemplate="{DataTemplate local:ScoringPage}" />
	<ShellContent Route="win-test" ContentTemplate="{DataTemplate local:WinCelebrationTest}" />

</Shell>